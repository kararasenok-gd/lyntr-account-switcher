{
  "manifest_version": 3,
  "name": "Lyntr Account Switcher",
  "version": "0.0.1",
  "description": "Switch your Lyntr accounts in a few clicks!",
  "permissions": [
    "cookies",
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["https://lyntr.com/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "https://lyntr.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/images/icon-16.png",
    "32": "assets/images/icon-32.png",
    "48": "assets/images/icon-48.png",
    "128": "assets/images/icon-128.png"
  }
}
